<% include ../partials/header %>


<div class="container">
	<div class="row">
		<h1 style="text-align: center">
			Edit a new <%=bootcamp.name%>

		</h1>
		<div style="width:30%; margin: 30px auto">
			
		<form method="POST" action="/campgrounds/<%=bootcamp._id%>?_method=PUT">
			<div class="form-group">
			<input class="form-control" type="text" name="bootcamp[name]" value="<%=bootcamp.name%>"></div>
			<div class="form-group">
			<input class="form-control" type="number" name="bootcamp[price]" value="<%=bootcamp.price%>" step="0.01"></div>
			<div class="form-group">
			<input class="form-control" type="text" name="bootcamp[image]" value="<%=bootcamp.image%>"></div>
			<div class="form-group">
			<input class="form-control" type="text" name="bootcamp[description]" value="<%=bootcamp.description%>"></div>
			<div class="form-group">
			<button class="btn btn-lg btn-primary btn-block">
				 Submit
			</button></div>
						
			
		</form>
			<a href="/campgrounds">Go Back to view BootCamps</a>
		</div>
		
	</div>
</div>

<% include ../partials/footer %>