<% include ../partials/header %>


<div class="container">
<header class="jumbotron">
	
	<div class="container">
		<h1> Welcome to Anata </h1>
		<p>View our upcoming workshops for the semester.</p>
		<p>
			<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New BootCamp</a>
		</p>
	</div>
	
</header>
	
	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
		<%bootCamps.forEach(function(bootcamp){%>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= bootcamp.image %>">
					<div class="caption">
						<h4><%= bootcamp.name %></h4>
					</div>
					<p>
						<a href="/campgrounds/<%=bootcamp._id%>" class="btn btn-primary"> More Info </a>
					</p>
				</div>
			</div>
		<%})%>
	</div>
</div>

<% include ../partials/footer %>